generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//////////////////////////////////////////
// USER MODEL
//////////////////////////////////////////
model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  phone     String
  gender    String?
  dob       DateTime?
  location  String?
  createdAt DateTime  @default(now())

  orders    Order[]
}

//////////////////////////////////////////
// PRODUCT MODEL
//////////////////////////////////////////
model Product {
  id          String      @id @default(uuid())
  name        String
  description String
  price       Float
  image       String
  location    String
  createdAt   DateTime    @default(now())

  orderItems  OrderItem[] // <-- relation FIXED
}

//////////////////////////////////////////
// ORDER MODEL
//////////////////////////////////////////
model Order {
  id            String      @id @default(cuid())

  userId        String
  customer      User        @relation(fields: [userId], references: [id])

  items         OrderItem[]

  total         Float
  paymentMethod String
  status        String
  address       String
  createdAt     DateTime    @default(now())
}

//////////////////////////////////////////
// ORDER ITEM MODEL
//////////////////////////////////////////
model OrderItem {
  id        String  @id @default(cuid())

  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId String
  product   Product @relation(fields: [productId], references: [id])

  name      String
  price     Float
  quantity  Int
  image     String?
}
